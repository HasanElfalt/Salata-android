<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="tabStyle">

    </style>

    <style name="EFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">64dp</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">auto</item>
    </style>

    <style name="EFABBottomStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">auto</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMinWidth">160dp</item>
        <item name="tabPadding">8dp</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorAccentWithOpacity</item>
        <item name="tabIndicator">@drawable/ic_tab_background</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabBackground">@drawable/tab_layout_background_selector</item>
        <item name="tabRippleColor">#FFFFFFFF</item>
        <item name="tabMode">auto</item>

    </style>

    <!-- for text -->
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorLightFont</item>
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
