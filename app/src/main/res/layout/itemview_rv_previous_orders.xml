<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_id_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="18dp"
                android:text="رقم الطلب"
                android:textColor="@color/colorFont"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_id_value_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="18dp"
                android:textColor="@color/colorFont"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/tv_order_id_previous"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="موعد التسليم المتوقع:"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_id_value_previous" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="إجمالى الحساب         :"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_hour_value_previous" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_price_value_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="255 جنيهاُ"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_order_price"
                app:layout_constraintTop_toBottomOf="@id/tv_hour_value_previous" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_day_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="اليوم الموافق"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_order_date"
                app:layout_constraintTop_toBottomOf="@id/tv_order_id_value_previous" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="الساعة"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_order_date"
                app:layout_constraintTop_toBottomOf="@id/tv_order_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hour_value_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/calibri"
                android:includeFontPadding="false"
                android:text="01:00 ظهرا"
                android:textColor="@color/colorFont"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_hour"
                app:layout_constraintTop_toBottomOf="@id/tv_order_date" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_order_image_previous"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:srcCompat="@drawable/ic_launcher_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_order_details"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/calibri"
                android:text="التفاصيل"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
