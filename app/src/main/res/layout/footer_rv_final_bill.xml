<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_rv_stroke_bottom_rounded_corner">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bill_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/demo_bill_price"
        android:textAlignment="gravity"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_delivery_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        tools:text="مصاريف الخدمة: 50,00"
        app:layout_constraintTop_toBottomOf="@id/tv_bill_price"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        tools:text="إجمالي الفاتورة: 1550,00"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_fees"
        />

</androidx.constraintlayout.widget.ConstraintLayout>